<%- USE Math -%>
<div class="hero-unit">
  <h1><% brand %></h1>
  <p>
   <a class="btn btn-primary btn-large" href="http://www.youtube.com/subscription_center?add_user=<% channel %>">Subscribe via YouTube</a>
</div>


<div class="hero-unit">
  <h2><% current.title %> :</h2>

  <script type="text/javascript" src="/javascripts/swfobject.js"></script>
  <script type="text/javascript" src="/javascripts/youtube.js"></script>
  <div id="ytapiplayer">
    You need Flash player 8+ and JavaScript enabled to view this video.
  </div>

  <script type="text/javascript">

    var params = { allowScriptAccess: "always" };
    var atts = { id: "myytplayer" };
    swfobject.embedSWF("http://www.youtube.com/v/<% current.video_id %>?enablejsapi=1&playerapiid=ytplayer&version=3",
                       "ytapiplayer", "853", "480", "8", null, null, params, atts);
  </script>

      <p>
      <div style="float: left;">
        <% current.description %>
      </div>
   </p>
</div>
